extends /layouts/application.pug

block content
  .container
    h1.text-center.my-5 Add task
    .row.justify-content-center.pb-8
      .col-12.col-lg-6
        +formFor(f, { url: urlFor('tasks'), method: 'post' })
          +input(f, 'name', 'Name')
          +input(f, 'description', 'Description')
          +select(f, 'status', 'Status', taskStatuses)
            for status in taskStatuses
              option(value=`${status.id}`)= status.name
          +select(f, 'assignedTo', 'Assigned to', users)
          +button('Add task')
