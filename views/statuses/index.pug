extends /layouts/application.pug

block content
  .container
    h1.text-center.my-5 Statuses
    .row.justify-content-center.pb-5
      .col-12.col-lg-4
        for status in statuses
          +formFor(f, { url: urlFor('editStatus', status.id), method: 'patch' })
            +inputGroupUpdate(f, status.name, status)
        +formFor(f, { url: urlFor('addStatus'), method: 'post' })
          +inputGroupAdd(f, newStatus, 'enter new status')

        
