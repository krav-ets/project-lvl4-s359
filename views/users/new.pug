extends /layouts/application.pug

block content
  +formFor(f, { url: urlFor('users'), method: 'post' })
    +input(f, 'email', 'E-Mail')
    +input(f, 'firstName', 'First Name')
    +input(f, 'lastName', 'Last Name' )
    +input(f, 'password', 'New Password', { as: 'password' })
    +button('Create User')
